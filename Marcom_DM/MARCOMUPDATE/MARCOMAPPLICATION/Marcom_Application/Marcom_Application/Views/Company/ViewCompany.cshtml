@model Marcom_Application.Model.master_company
@{
    ViewBag.Title = "ViewCompany";
    Layout = null;
}
@using (Html.BeginForm("ViewCompany", "Company", FormMethod.Post, new { id = "form_create" }))
{
    @Html.HiddenFor(a => a.id)
    <form>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-2">
                    <label>* Company Code</label>
                </div>
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Auto Generated" value="@Model.code" disabled/>
                </div>
                <div class="col-lg-2">
                    <label>* Company Name</label>
                </div>
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Type Company Name" name="name" id="name" value="@Model.name" disabled />
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-2">
                    <label>Email</label>
                </div>
                <div class="col-lg-4">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Type Email" value="@Model.email" disabled />
                </div>
                <div class="col-lg-2">
                    <label>Address</label>
                </div>
                <div class="col-lg-4">
                    <textarea type="text" class="form-control" id="address" name="address" placeholder="Type Address" value="@Model.address" disabled>@Model.address</textarea>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-2">
                    <label>Phone</label>
                </div>
                <div class="col-lg-4">
                    <input type="number" class="form-control" id="phone" name="phone" placeholder="Type Phone" value="@Model.phone" disabled/>
                </div>
            </div>
        </div>
        <div class="modal-footer">
                <button type="button" class="btn btn-warning cls_close" data-dissmiss="modal fade">Close</button>
        </div>
    </form>
}
<script>
    $(".cls_close").click(function () {
        $("#exampleModal").modal("hide");
        window.location.reload();
    });
</script>

